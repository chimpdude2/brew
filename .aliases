alias aws-ssh="~/misc-scripts/ssh/bin/aws-ssh"

# ---------------------------------
# Mysql
# ---------------------------------
alias mysql-root='mysql -u root -p'
alias mysql-restart='sudo /usr/local/mysql/support-files/mysql.server stop && sudo /usr/local/mysql/support-files/mysql.server start'

